{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
				"-w",
				"-O1",
                "-stdlib=libc++",
                "$(find",
                "${fileDirname}",
                "-type",
                "f",
                "-iregex",
                "'.*\\.cpp')",
                "-o",
                "${fileBasenameNoExtension}",
                "--debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}